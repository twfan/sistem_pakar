<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e.twfan.sistempakar">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".Question1Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Question2Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Question3Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Question4Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Question5Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>